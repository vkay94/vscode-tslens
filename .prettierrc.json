{
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "trailingComma": "all",
  "printWidth": 100,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "overrides": [
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "semi": true,
  "bracketSpacing": true,
  "bracketSameLine": true
}
